<div id="qa">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3">
        <div id="question">
          <h2><%= @query %></h2>
          <h3>- You</h3>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3">
        <div id="answer">
          <h2><%= @coach_answer %></h2>
          <h3>- Your Coach</h3>
        </div>
      </div>
    </div>
    <div class="row" id="link">
      <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3">
        <%= link_to "Ask a new question", ask_path %>
      </div>
    </div>

  </div>
</div>






